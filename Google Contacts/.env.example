# Tool Store Developer API base URL
TOOLSTORE_API_BASE=https://api.toolstore.com/dev_api/v1

# Firebase JWT for the current Tool Store user session (injected by host)
# Example: eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9...
TOOLSTORE_JWT=

# Tool identification (injected by host)
TOOLSTORE_DEV_SLUG=
TOOLSTORE_TOOL_SLUG=

# Current user identification (injected by host)
TOOLSTORE_USER_ID=
TOOLSTORE_USER_SLUG=

# Optional: If Tool Store exposes an endpoint to mint fresh access tokens
# from stored refresh tokens, set it here. If empty, tokens are not refreshed
# by this server, and users must re-run activation if access tokens expire.
TOOLSTORE_OAUTH_TOKEN_ENDPOINT=

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

